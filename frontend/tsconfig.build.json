{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
